table Art {
    human:                uint;
    grass:                [uint];
    forest:               [uint];
    building_in_progress: uint;
    road:                 [uint];
    flag:                 [uint];
    // grass_tile_rule:      Tile_Rule;
}

table Game_Library {
    buildings: [Building];
    resources: [Resource];
    art: Art;
}

file_identifier "GLIB";
root_type Game_Library;
